{% extends "partials/layout.njk"%}
{% block  title %}Movies{% endblock %}
{% block  content %}
    <a href ="/movies/add">Add</a>
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>

    <table                            >
        <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Year</th>
        </thead>
        <tbody>
            {% for movie in movies %}

            <tr>
                <td>{{movie.id}}</td>
                <td>{{movie.name}}</td>
                <td>{{movie.year}}</td>
            </tr>

            {% endfor%}
        </tbody>
    </table>
{% endblock %}
